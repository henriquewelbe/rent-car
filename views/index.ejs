<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Car Rental Template</title>
  <link rel="stylesheet" href="css/reset.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:ital@0;1&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="css/styles.css">
</head>

<body>
  <div class="overflow">
    <div class="container">
      <nav class="nav">
        <div class="nav-container">
          <div class="logo"><img src="images/rentcar-logo.svg" alt="Logo Rentcar" srcset=""></div>
          <div class="nav-right-side">
            <a href="#" class="terms-and-conditions">Terms and Conditions / Policies</a>
            <spam class="total-container">
              <spam class="total-price">total:</spam>
              <spam class="total-number">r$50,00</spam>
            </spam>
          </div>
        </div>
      </nav>
      <section class="main">
        <div class="details">
          <div class="detail--container">
            <div class="check">
              <img src="images/check.svg" class="check-img" alt="">
            </div>
            <p class="details--label multiline">RENTAL DETAILS</p>
          </div>
          <div class="detail--container">
            <div class="check">
              <img src="images/check.svg" class="check-img" alt="">
            </div>
            <p class="details--label multiline">PICK-UP & RETURN</p>
          </div>
          <div class="detail--container">
            <div class="check">
              <img src="images/check.svg" class="check-img" alt="">
            </div>
            <p class="details--label">VEHICLE</p>
          </div>
          <div class="detail--container">
            <div class="check not-checked">
              <p class="last-step">4</p>
            </div>
            <p class="details--label">EXTRAS</p>
          </div>
        </div>
        <div class="header">
          <div class="header--left-side">
            <h1>choose a vehicle class</h1>
            <div class="description--header--left-side">
              Vehicles available on the date
              <a href="#">
                <img src="images/calendar-icon.svg" alt="" class="calendar-icon">
                fri, May 11 12:00 PM-Sat, May 12 12:00 PM</a>
              in:
              <a href="#">
                <img src="images/location-icon.svg" alt="" class="location-icon">
                Chicago O'Hare International Airport</a>
            </div>
          </div>
          <div class="header--right-side">
            <div class="select">
              <select name="">
                <option value="" selected disabled>Vehicle Type</option>
              </select>
            </div>
            <div class="select is--passenger">
              <select name="Passenger Capacity">
                <option value="" selected disabled>Passenger Capacity</option>
              </select>
            </div>
          </div>
        </div>
        <div class="cards-container">
          <% cars.forEach(function(car){ %>
            <div class="card">
              <div class="card--top">
                <div class="card--top--left">
                  <div class="type"><%=car.type%></div>
                  <div class="model"><%=car.model + " or similar"%></div>
                  <div class="mode"><%=car.mode%></div>
                </div>
                <div class="card--top--right">
                  <a href="#" class="more-details">More details</a>
                </div>
              </div>
              <div class="card--image">
                <img src=<%="images/" + _.kebabCase(car.type) + ".png"%> alt="" class="car-image">
              </div>
              <div class="card--bottom">
                <div class="bottom--row-1">
                  <div class="pay-later">pay later</div>
                  <div class="line"></div>
                </div>
                <div class="bottom--row-2">
                  <div class="price-day">
                    $ <%=car.priceDay%><br>
                    <spam class="per-day">Per Day</spam>
                  </div>
                  <div class="price-day">
                    $ <%=car.priceTotal%><br>
                    <spam class="per-day">Total</spam>
                  </div>
                  <a href="#" class="price-details">Price details</a>
                </div>
                <div class="bottom--row-3">
                  <a href="#" class="button">select car</a>
                  <a href="#" class="button secondary">compare car</a>
                </div>
              </div>
            </div>
          <%})%>
        </div>
      </section>
    </div>
  </div>
</body>

</html>